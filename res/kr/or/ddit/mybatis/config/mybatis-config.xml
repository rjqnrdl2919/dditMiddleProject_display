<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- 외부 DB 접속 정보를 불러오는 설정 -->
    <properties resource="kr/or/ddit/mybatis/config/db.properties" />

    <!-- CamelCase 자동 매핑 설정 (주석 처리됨 → 필요시 활성화) -->
    
    <settings> 
        <setting name="mapUnderscoreToCamelCase" value="true"/> 
    </settings> 
    

    <!-- VO 클래스의 짧은 별칭 설정 -->
    <typeAliases>    </typeAliases>

    <!-- 환경 설정: dev 환경 사용 -->
    <environments default="dev">
        <environment id="dev">
            <!-- 트랜잭션 처리 방식: JDBC 직접 관리 -->
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <!-- DB 접속 정보는 properties에서 불러옴 -->
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
            
        </environment>
    </environments>

    <!-- Mapper 파일 위치 등록 -->
    <mappers>
        <mapper resource="kr/or/ddit/mybatis/mappers/graph.xml"/>
    </mappers>

</configuration>
